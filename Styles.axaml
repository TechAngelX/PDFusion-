<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Purple Primary Button Style -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#8B5CF6" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#7C3AED" />
    </Style>
    <Style Selector="Button.primary:disabled">
        <Setter Property="Background" Value="#CBD5E1" />
        <Setter Property="Foreground" Value="#94A3B8" />
    </Style>

    <!-- Secondary Button Style -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="#8B5CF6" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderBrush" Value="#8B5CF6" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#F5F3FF" />
    </Style>

    <!-- File Panel Border Style -->
    <Style Selector="Border.filePanel">
        <Setter Property="Background" Value="#F8FAFC" />
        <Setter Property="BorderBrush" Value="#CBD5E1" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Border.filePanel:pointerover">
        <Setter Property="Background" Value="#EDE9FE" />
    </Style>
    <Style Selector="Border.filePanel.loaded">
        <Setter Property="Background" Value="#DCFCE7" />
        <Setter Property="BorderBrush" Value="#86EFAC" />
    </Style>
    <Style Selector="Border.filePanel.disabled">
        <Setter Property="Background" Value="#F1F5F9" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>

    <!-- Step Label Style -->
    <Style Selector="TextBlock.stepLabel">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#334155" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Section Label Style -->
    <Style Selector="TextBlock.sectionLabel">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#334155" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Status TextBox Style -->
    <Style Selector="TextBox.statusBox">
        <Setter Property="Background" Value="#F8FAFC" />
        <Setter Property="BorderBrush" Value="#E2E8F0" />
        <Setter Property="Foreground" Value="#475569" />
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- DataGrid Styling -->
    <Style Selector="DataGrid">
        <Setter Property="GridLinesVisibility" Value="All" />
        <Setter Property="BorderBrush" Value="#E2E8F0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace" />
        <Setter Property="FontSize" Value="12" />
    </Style>
</Styles>
